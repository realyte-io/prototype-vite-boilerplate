{
  "name": "api",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "concurrently \"npm run copy-files\" \"tsc-watch -p tsconfig.json --onSuccess 'node dist/index.js'\"",
    "build": "concurrently \"node build.js\" \"npm run copy-files\"",
    "postbuild": "cp -R prisma dist",
    "copy-files": "copyfiles -u 1 src/**/*.graphql dist/",
    "lint": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.670.0",
    "@graphql-tools/schema": "^10.0.4",
    "@graphql-tools/utils": "^10.2.2",
    "@prisma/client": "^5.15.1",
    "aws-jwt-verify": "^4.0.1",
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.4.5",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.23.0",
    "graphql-yoga": "^5.3.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.138",
    "@types/graphql": "^14.5.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.21.5",
    "ts-node-dev": "^2.0.0",
    "tsc-watch": "^6.2.0"
  }
}
